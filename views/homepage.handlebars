{{#each blogs as |blog|}}
<div>
  <div class="p-3">
    <div class="card" style="width: 35rem;">
      <div class="card-body">
        <h5 class="card-title"><a class="blogTitle text-uppercase" href="/blog/{{blog.id}}">{{blog.title}}</a></h5>
        <h6 class="card-subtitle mb-2 text-muted">Created by {{blog.user.name}} on {{format_date blog.date_created}}
        </h6>
        <p class="card-text"> {{blog.description}}.</p>
      </div>
    </div>
  </div>
  {{/each}}